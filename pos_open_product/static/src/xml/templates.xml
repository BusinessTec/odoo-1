<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OpenproductButton">
        <span class="control-button open-food">
            <i class="fa fa-plus"></i>
            Open Product
        </span>
    </t>
    
     <t t-name="OpenproductPopup">
        <div class="modal-dialog">
            <div class="popup popup-textinput">
                <p class="title"><t t-esc=" widget.options.title || '' " /></p>
               
                <input type='text' style="margin-bottom:10px" placeholder="Product Name" class="product_name" t-att-value="widget.options.product_name || ''"></input>
                <input type='number' placeholder="Product Price" class="price" t-att-value="widget.options.price || ''"></input>
               
                <div class="footer">
                    <div class="button confirm">
                        Ok 
                    </div>
                    <div class="button cancel">
                        Cancel 
                    </div>
                </div>
            </div>
        </div>
    </t>

    

</templates>
